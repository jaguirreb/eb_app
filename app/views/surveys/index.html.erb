<h1>Surveys</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Nombre</th>
      <th>Tipo</th>
      <th>Descripci√≥n</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
    <tr>
      <td><%= survey.name %></td>
      <td><%= survey.kind %></td>
      <td><%= survey.description %></td>
      <td><%= link_to survey do %>
        <i class="fab fa-accessible-icon fa-3x" style="color:green"></i>
        <% end %>
      </td>
      <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
      <td><%= link_to survey, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="fas fa-trash-alt fa-2x" style="color:purple"></i>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

